<h1>Books</h1>
<h1>投稿一覧</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<% @books.each do |book| %>

  <p>title</p>
  <span><%= book.title %></span>

<% end %>
<% @books.each do |book| %>



  <p>body</p>
 <span>
  <%= link_to book.title, book_path(book.id) %>
  </span>

<% end %>

<table></table>

<h2>New book</h2>
<%= form_with model: @book do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>
